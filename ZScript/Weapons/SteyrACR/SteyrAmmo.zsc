class PB_HDFlechetteSabot:HDDebris{
	default{
		xscale 0.3;yscale 0.1;height 2;radius 2;
		translation "ice";
		bouncesound "nothingxddd";
	}
	states{
	spawn:
		TNT1 A 0 nodelay{
			int blh=random(20,35);
			A_ChangeVelocity(cos(pitch)*blh,frandom(-1,1),-sin(pitch)*blh,CVF_RELATIVE);
		}
	spawn2:
		RBRS A 2{angle+=45;}
		loop;
	death:
		---- A 90;
		---- A 1 A_Fadeout(0.1);
		wait;
	}
}